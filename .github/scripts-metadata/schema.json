        "path": {
            "type": "string",
            "pattern": "^/tutorials/(?!tutorial-template)[a-z]([a-z0-9]|((?<!-)-))*[a-z0-9](/(aa|ab|ae|af|ak|am|an|ar|as|av|ay|az|ba|be|bg|bh|bi|bm|bn|bo|br|bs|ca|ce|ch|co|cr|cs|cu|cv|cy|da|de|dv|dz|ee|el|en|eo|es|et|eu|fa|ff|fi|fj|fo|fr|fy|ga|gd|gl|gn|gu|gv|ha|he|hi|ho|hr|ht|hu|hy|hz|ia|id|ie|ig|ii|ik|io|is|it|iu|ja|jv|ka|kg|ki|kj|kk|kl|km|kn|ko|kr|ks|ku|kv|kw|ky|la|lb|lg|li|ln|lo|lt|lu|lv|mg|mh|mi|mk|ml|mn|mr|ms|mt|my|na|nb|nd|ne|ng|nl|nn|no|nr|nv|ny|oc|oj|om|or|os|pa|pi|pl|ps|pt|qu|rm|rn|ro|ru|rw|sa|sc|sd|se|sg|si|sk|sl|sm|sn|so|sq|sr|ss|st|su|sv|sw|ta|te|tg|th|ti|tk|tl|tn|to|tr|ts|tt|tw|ty|ug|uk|ur|uz|ve|vi|vo|wa|wo|xh|yi|yo|za|zh|zu))?$",
            "title": "URL path for your tutorial",
            "description": "Always starts with /tutorials/, if the language of the tutorial is not English, append it to the end, like: /de. Do not put a trailing slash."
        },
        "slug": {
            "type": "string",
            "pattern": "^(?!tutorial-template)[a-z]([a-z0-9]|((?<!-)-))*[a-z0-9]$",
            "title": "Like path, but without /tutorials/ prefix and the language suffix."
        },
        "date": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
            "title": "Date in the format YYYY-MM-DD"
        },
        "title": {
            "type": "string"
        },
        "short_description": {
            "type": "string",
            "maxLength": 159
        },
        "tags": {
            "type": "array",
